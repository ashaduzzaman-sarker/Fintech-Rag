# Application
APP_NAME="FinTech RAG Assistant"
ENVIRONMENT=development  # development, staging, production
LOG_LEVEL=INFO
API_HOST=0.0.0.0
API_PORT=8000

# OpenAI
OPENAI_API_KEY=sk-your-key-here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_EMBEDDING_MODEL=text-embedding-3-large
OPENAI_TEMPERATURE=0.1
OPENAI_MAX_TOKENS=2048

# Pinecone
PINECONE_API_KEY=your-pinecone-key
PINECONE_ENVIRONMENT=us-east-1-aws
PINECONE_INDEX_NAME=fintech-rag-prod
PINECONE_DIMENSION=3072  # text-embedding-3-large dimension
PINECONE_METRIC=cosine
PINECONE_CLOUD=aws
PINECONE_REGION=us-east-1

# Cohere (Reranking)
COHERE_API_KEY=your-cohere-key
COHERE_RERANK_MODEL=rerank-english-v3.0
COHERE_RERANK_TOP_N=10

# Retrieval Configuration
RETRIEVAL_TOP_K_VECTOR=20
RETRIEVAL_TOP_K_BM25=20
RETRIEVAL_RERANK_TOP_N=5
CHUNK_SIZE=800
CHUNK_OVERLAP=200

# Generation Configuration
RAG_CONTEXT_WINDOW=4000
RAG_SYSTEM_PROMPT_VERSION=v1
ENABLE_CITATION_VALIDATION=true

# Data Paths
DATA_DIR=./data
RAW_DATA_DIR=./data/raw
PROCESSED_DATA_DIR=./data/processed
INDEX_DIR=./data/indexes

# Security
API_KEY_NAME=X-API-Key
# API_KEY=your-secret-api-key  # Uncomment for API key auth

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# Optional: Local LLM
# LOCAL_LLM_ENABLED=false
# LOCAL_LLM_MODEL_PATH=./models/llama-2-13b.gguf